<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <RadioGroup
            android:id="@+id/rg_disaster_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbtn_check_1"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="监测点信息"
                android:textSize="15sp"
                android:background="@drawable/radiobtn_selector"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbtn_check_2"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="项目信息"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/radiobtn_selector"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbtn_check_3"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="现场图片"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/radiobtn_selector"
                android:button="@null" />

        </RadioGroup>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_shebei_info_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="监测点名称："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_monitor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YY2208"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="监测类型："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_static_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地表位移(GPS)"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_device_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7721"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="硬件版本号："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_hardware_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="固态版本号："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_soft_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册时间："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_register_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备状态："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="正常工作"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据显示："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_check_to_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_ll_background"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="查看详情"
                        android:textColor="#FF7F00"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_shebei_info_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目名称："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目开始时间："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi1"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目地点："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_project_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi1"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经度："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纬度："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目负责人："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_project_man"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="暂无数据"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shebei_info_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/disaster_image" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
