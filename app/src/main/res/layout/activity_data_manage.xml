<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.8"
        android:background="@drawable/shape_ll_background"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_ll_background1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="数据管理"
                android:textColor="@color/color_title"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_data_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/backward" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_xingzheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_xz_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="行政区划图"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />

                    </LinearLayout>


                    <include layout="@layout/item_xingzheng" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_rainfall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_rainfall_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="雨量专题分析"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />

                    </LinearLayout>


                    <include layout="@layout/item_rainfall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dangerpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_dangerpoint_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="隐患点可视化管理"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />
                    </LinearLayout>

                    <include layout="@layout/item_dangerpoint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_staff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_staff_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="四重网格人员管理"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />
                    </LinearLayout>

                    <include layout="@layout/item_staff" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_equipment_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="专业监测设备管理"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />
                    </LinearLayout>

                    <include layout="@layout/item_equipment" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_qxsy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_neirong"
                    android:layout_marginTop="@dimen/margin_neirong"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_qxsy"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:padding="2dp"
                            android:src="@mipmap/more" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="left|center"
                            android:paddingLeft="7dp"
                            android:text="倾斜摄影"
                            android:textColor="@color/color_neirong"
                            android:textSize="@dimen/leirong_text_size" />
                    </LinearLayout>
                    <include layout="@layout/item_qxsy"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
