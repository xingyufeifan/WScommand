<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/rg_staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_qcqf_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_neirong_2"
            android:layout_marginTop="@dimen/margin_neirong_2"
            android:button="@null"
            android:drawableLeft="@drawable/rbtn_selector"
            android:drawablePadding="@dimen/rbtn_drawable_padding"
            android:gravity="left|center"
            android:paddingLeft="40dp"
            android:text="群测群防人员"
            android:textColor="@color/color_neirong"
            android:textSize="@dimen/data_text_size_2" />

        <RadioButton
            android:id="@+id/rb_zs_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_neirong_2"
            android:layout_marginTop="@dimen/margin_neirong_2"
            android:button="@null"
            android:drawableLeft="@drawable/rbtn_selector"
            android:drawablePadding="@dimen/rbtn_drawable_padding"
            android:gravity="left|center"
            android:paddingLeft="40dp"
            android:text="驻守地质人员"
            android:textColor="@color/color_neirong"
            android:textSize="@dimen/data_text_size_2" />

        <RadioButton
            android:id="@+id/rb_pq_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_neirong_2"
            android:layout_marginTop="@dimen/margin_neirong_2"
            android:button="@null"
            android:drawableLeft="@drawable/rbtn_selector"
            android:drawablePadding="@dimen/rbtn_drawable_padding"
            android:gravity="left|center"
            android:paddingLeft="40dp"
            android:text="片区负责人"
            android:textColor="@color/color_neirong"
            android:textSize="@dimen/data_text_size_2" />

        <RadioButton
            android:id="@+id/rb_dhz_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_neirong_2"
            android:layout_marginTop="@dimen/margin_neirong_2"
            android:button="@null"
            android:drawableLeft="@drawable/rbtn_selector"
            android:drawablePadding="@dimen/rbtn_drawable_padding"
            android:gravity="left|center"
            android:paddingLeft="40dp"
            android:text="地环站人员"
            android:textColor="@color/color_neirong"
            android:textSize="@dimen/data_text_size_2" />

    </RadioGroup>

</LinearLayout>
