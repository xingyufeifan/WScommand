<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--查看详情-->

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kidbgColor">

        <com.nandi.wscommand.ui.MyRadioGroup
            android:id="@+id/myrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_1_1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="人员信息"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_1_2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="基本信息"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_1_3"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="隐患点图片"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_1_4"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="隐患点视频"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_2_1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="防灾明白卡"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_2_2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="避险明白卡"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_2_3"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="防灾预案"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_2_4"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="评估记录"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_3_1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="全景图片"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_3_2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="应急处置记录"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_detail_3_3"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_margin="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="灾情处置记录"
                        android:textSize="15sp"
                        android:background="@drawable/radiobtn_selector"
                        android:button="@null"  />

                </LinearLayout>

            </LinearLayout>

        </com.nandi.wscommand.ui.MyRadioGroup>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/ll_switch_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"

                >


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
