<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <RadioGroup
            android:id="@+id/rg_disaster_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbtn_base_info"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="基本信息"
                android:textSize="15sp"
                android:background="@drawable/radiobtn_selector"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbtn_check_detail"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="查看详情"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/radiobtn_selector"
                android:button="@null" />

        </RadioGroup>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_base_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:text="隐患点名称："
                        android:textColor="@color/relic_text_color"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_dis_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textColor="@color/relic_text_edit_color"
                        android:textSize="@dimen/relic_text_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="隐患点类型："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_dis_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="隐患点编号："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_dis_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="乡镇："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_area_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="详细地址："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_dis_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="主要诱因："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_dis_cause"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="受威胁人数："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_imperil_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="受威胁户数："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_imperil_families"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="影响对象："
                        android:textColor="@color/relic_text_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />

                    <TextView
                        android:id="@+id/tv_main_object"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ceshi"
                        android:textColor="@color/relic_text_edit_color"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/textview_background"
                        android:textSize="@dimen/relic_text" />
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>
