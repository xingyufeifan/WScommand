<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shape_ll_background"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="统计信息"
                android:textColor="@color/title_text_color"
                android:background="@color/title_bg_color"
                android:textSize="25sp" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorblack"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="地质灾害点数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="已治理灾害点数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>

                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="已搬迁灾害点数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>

                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="已销号灾害点数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow><TableRow
                android:padding="8dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="12dp"
                    android:text="群测群防人员数量"
                    android:textColor="@color/color_title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_kuangxuan_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/color_title"
                    android:textSize="20sp" />


            </TableRow>
                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="片区负责人数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>
                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="驻守地质队员数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>
                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="地环站人员数量"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>

                <TableRow
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="12dp"
                        android:text="框选区域面积(km2)"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_kuangxuan_9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_title"
                        android:textSize="20sp" />


                </TableRow>


            </TableLayout>
        </LinearLayout>

    </LinearLayout>




    </LinearLayout>
</RelativeLayout>
